# Theme and Appearance
# Ghostty uses proper-cased theme names (e.g. "Catppuccin Mocha").
# The previous value (catppuccin-mocha) doesn't resolve and falls back
# to defaults, so use the canonical name here.
theme = Catppuccin Mocha
font-family = "Hack"
font-size = 14
cursor-style = "block"
window-theme = "auto"

# Window Configuration
window-width = 150
window-height = 100
window-padding-x = 8
window-padding-y = 8
window-decoration = true

# macOS Integration
macos-titlebar-style = transparent
macos-option-as-alt = left

# Terminal Features
shell-integration = zsh
confirm-close-surface = false
copy-on-select = true
mouse-scroll-multiplier = 3

# Keybindings - Enhanced for productivity
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up

# New tab/window management
keybind = cmd+t=new_tab
keybind = cmd+n=new_window
keybind = cmd+w=close_surface

# Split management
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down

# Navigation
keybind = cmd+1=goto_tab:1
keybind = cmd+2=goto_tab:2
keybind = cmd+3=goto_tab:3
keybind = cmd+4=goto_tab:4
keybind = cmd+5=goto_tab:5

# Clear terminal
keybind = cmd+k=clear_screen

# Unbind problematic keys that might interfere with FZF
keybind = alt+left=unbind
keybind = alt+right=unbind
